{
  "name": "@blackflux/robo-config-plugin",
  "version": "0.0.0-development",
  "description": "Blackflux robo-config plugin.",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rm -rf lib",
    "build": "npx babel src --out-dir lib --copy-files --include-dotfiles --config-file ./.babelrc",
    "build-clean": "npm run clean && npm run build",
    "test-simple": "nyc mocha \"./test/**/*.spec.js\"",
    "test": "npm run clean && npm run gardener && npm run test-simple",
    "coveralls": "node ./node_modules/coveralls/bin/coveralls.js < ./coverage/lcov.info",
    "semantic-release": "npm run build-clean && npx semantic-release",
    "gardener": "node gardener"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/blackflux/robo-config-plugin.git"
  },
  "keywords": [
    "robo-config",
    "plugin",
    "configuration"
  ],
  "author": "Lukas Siemon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/blackflux/robo-config-plugin/issues"
  },
  "homepage": "https://github.com/blackflux/robo-config-plugin#readme",
  "devDependencies": {
    "@babel/cli": "7.5.0",
    "@babel/core": "7.5.0",
    "@babel/plugin-proposal-object-rest-spread": "7.5.3",
    "@babel/register": "7.4.4",
    "@blackflux/eslint-plugin-rules": "1.0.20",
    "@blackflux/robo-config-plugin": "2.0.0",
    "babel-eslint": "10.0.2",
    "chai": "4.2.0",
    "coveralls": "3.0.4",
    "eslint": "6.0.1",
    "js-gardener": "2.0.42",
    "nyc": "14.1.1",
    "robo-config": "3.0.23",
    "semantic-release": "15.13.18"
  },
  "nyc": {
    "tempDir": "./coverage/.nyc_output",
    "report-dir": "./coverage",
    "check-coverage": true,
    "per-file": false,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "require": [
      "@babel/register"
    ],
    "extension": [],
    "cache": true,
    "all": true,
    "babel": true,
    "exclude": [
      "gardener.js",
      "node_modules/*",
      "coverage/*",
      "lib/*",
      "src/plugin/tasks/**",
      "test/projects/**"
    ]
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/blackflux/robo-config-plugin/blob/master/LICENSE"
    }
  ],
  "engines": {
    "node": ">= 8.10"
  },
  "files": [
    "lib"
  ],
  "dependencies": {}
}
